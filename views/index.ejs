<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Odin Book</title>
    <link rel="stylesheet" href="/styles/base.css">
    <link rel="stylesheet" href="/styles/index.css">
    <script src="/util/postModal.js" defer></script>
</head>
<body>
    <%- include('nav') %>
    <main>
        <div class="main-header">
            <a href="/"><h4>For you</h4></a>
            <a href="/following"><h4>Following</h4></a>
        </div>
        <div class="main-content">
            <div class="new-post-block">
                <div class="avatar">
                    <img src="/assets/default-avatar.jpg" alt="" >
                </div>
                <input type="text" id="trigger-input" placeholder="What's new?">
                <button class="post-btn">Post</button>
            </div>
            <% posts.forEach((post) => { %>
                <div class="post-block">
                    <div class="post-avatar">
                        <div class="avatar">
                            <img src="/assets/default-avatar.jpg" alt="">
                        </div>
                    </div>
                    <div class="post-main">
                        <div class="post-header">
                            <p><strong><%= post.author.username %></strong></p>
                            <% if (post.topic) { %>
                                <span><img src="/assets/right-arrow.svg" alt="" width="20px" /></span>
                                <p><strong><%= post.topic.displayTitle %></strong></p>
                            <% } %>
                        </div>
                        <div class="post-content">
                            <%= post.content %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <a href="/logout">Log out</a>
    </main>
    <%- include('postModal') %>
</body>
</html>