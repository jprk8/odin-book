<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Odin Book</title>
    <link rel="stylesheet" href="/styles/base.css">
    <link rel="stylesheet" href="/styles/index.css">
    <script src="/scripts/postModal.js" defer></script>
    <script src="/scripts/likeBtn.js" defer></script>
</head>
<body>
    <%- include('nav', { page: 'home' }) %>
    <main>
        <div class="main-header">
            <a href="/"><h4>For you</h4></a>
            <a href="/following"><h4>Following</h4></a>
        </div>
        <div class="main-content">
            <div class="new-post-block">
                <div class="avatar">
                    <img src="/assets/default-avatar.jpg" alt="" >
                </div>
                <input type="text" id="trigger-input" placeholder="What's new?">
                <button class="post-btn">Post</button>
            </div>
            <% posts.forEach((post) => { %>
                <div class="post-block" data-post-id="<%= post.id %>">
                    <div class="post-avatar">
                        <div class="avatar">
                             <img src="/assets/default-avatar.jpg" alt="" />
                        </div>
                    </div>
                    <div class="post-main">
                        <div class="post-header">
                            <a href="/profile/<%= post.author.id %>" class="user-link">
                                <strong><%= post.author.username %></strong>
                            </a>
                            <% if (post.topic) { %>
                                <span><img src="/assets/right-arrow.svg" alt="" width="20px" /></span>
                                <p><strong><%= post.topic.displayTitle %></strong></p>
                            <% } %>
                        </div>
                        <div class="post-content">
                            <%= post.content %>
                        </div>
                        <div class="post-menu">
                            <div class="post-likes">
                                <button class="like-btn">
                                    <img src="/assets/heart<%= post.isLiked ? '-red' : '-outline-light' %>.svg" alt="" width="20px">
                                </button>
                                <p class="like-count"><%= post._count.likes %></p>
                            </div>
                            <div class="post-comments">
                                <button class="comment-btn">
                                    <img src="/assets/comment.svg" alt="" width="20px">
                                </button>
                                <p class="comment-count"><%= post.comments.length %></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <a href="/logout">Log out</a>
    </main>
    <%- include('postModal') %>
</body>
</html>