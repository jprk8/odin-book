<div class="post-comment">
    <!-- Original post -->
    <% if (comment.parent) { %>
        <%- include('postBlock', { post: comment.parent, pipe: true }) %>
    <% } else { %>
        <%- include('postBlock', { post: comment.post, pipe: true }) %>
    <% } %>
    <!-- Profile replies -->
    <%- include('postBlock', { post: comment }) %>
</div>