<dialog id="post-modal">
    <form action="/posts/newpost" method="POST">
        <input type="hidden" id="redirectUrl" name="redirectUrl" />
        <div class="modal-header">
            <button type="button" class="close-post-modal">Cancel</button>
            <p>New thread</p>
            <div class="header-options">
                <img src="/assets/draft.svg" alt="" width="24px" />
                <img src="/assets/options.svg" alt="" width="24px"/>
            </div>
        </div>
        <div class="modal-main">
            <div class="modal-main-left">
                <div class="avatar">
                    <img src="<%= gravatarUrl(user.gravatar) %>" alt="">
                </div>
            </div>
            <div class="modal-main-right">
                <div class="modal-topic">
                    <p><strong><%= user.username %></strong></p>
                    <span><img src="/assets/right-arrow.svg" alt="" width="20px" /></span>
                    <input type="text" id="topic" name="topic" placeholder="Add a topic" />
                </div>
                <textarea id="modal-content" name="content" placeholder="What's new?" rows="1" maxlength="500"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <p>Anyone can reply & quote</p>
            <button type="submit" class="post-btn">Post</button>
        </div>
    </form>
</dialog>